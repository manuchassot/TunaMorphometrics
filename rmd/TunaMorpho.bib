@Article{Gerritsen2007,
  author     = {Gerritsen, H. D. and McGrath, D.},
  journal    = {Fisheries Research},
  title      = {Significant differences in the length–weight relationships of neighbouring stocks can result in biased biomass estimates: {Examples} of haddock (\textit{{Melanogrammus} aeglefinus}, {L}.) and whiting (\textit{{Merlangius} merlangus}, {L}.)},
