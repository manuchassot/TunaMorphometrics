@Article{Bodin2018,
  author    = {Bodin, Nathalie and Chassot, Emmanuel and Sardenne, Fany and Zudaire, Iker and Grande, Maitane and Dhurmeea, Zahirah and Murua, Hilario and Barde, Julien},
