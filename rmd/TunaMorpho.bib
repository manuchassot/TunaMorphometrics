@Article{LeCren1951,
  author   = {Le Cren, E. D.},
  journal  = {Journal of Animal Ecology},
  title    = {The length-weight relationship and seasonal cycle in gonad weight and condition in the perch (\textit{{Perca} fluviatilis})},
