  file       = {Full Text PDF:C\:\\Users\\echassot\\Zotero\\storage\\GZ9ATG2N\\Hossain et al. - 2006 - Condition, length–weight and length–length relatio.pdf:application/pdf;Snapshot:C\:\\Users\\echassot\\Zotero\\storage\\5EAXFII8\\j.1439-0426.2006.00803.html:text/html},
